{
  "name": "swarm",
  "version": "0.0.0",
  "description": "The swarm static site generator",
  "bin": {
    "swarm": "./swarm-cli/index.js"
  },
  "files": [
    "./output/styles/**/*",
    "./output/components/**/*"
  ],
  "scripts": {
    "serve": "babel-node tools/server.start.js",
    "content-pull": "babel-node tools/swarm.content.pull.start.js",
    "content-build": "babel-node tools/swarm.builder.start.js",
    "content-push": "babel-node tools/swarm.content.push.start.js",
    "import": "npm run content-import > npm run content-build",
    "build-styles": "lessc ./styles/root.less ./dist/styles.css",
    "build": "npm run build-styles && npm run content-build",
    "watch-styles": "nodemon --watch *.less --exec \"npm run build-styles\"",
    "watch-app": "nodemon --watch components --watch tools --exec \"npm run content-build\"",
    "watch-content": "nodemon --watch content --exec \"npm run content-build\"",
    "browser-sync": "browser-sync start --cwd --server \"dist\" --files \"dist\"",
    "dev": "concurrently \"npm run watch-styles\" \"npm run watch-app\" \"npm run browser-sync\"",
    "unlink": "npm uninstall -g swarm",
    "link": "npm install -g",
    "rollup": "npm run build-styles && rollup -c",
    "dev-init": "npm run rollup && npm uninstall -g swarm && npm i -g && swarm init && swarm content pull && swarm content build"
  },
  "author": "Carlos Kelkboom",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/runtime": "^7.17.8",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^4.0.0",
    "axios": "^0.26.1",
    "browser-sync": "^2.27.9",
    "chalk": "^5.0.1",
    "commander": "^9.1.0",
    "concurrently": "^7.0.0",
    "express": "^4.17.3",
    "front-matter": "^4.0.2",
    "fs-extra": "^10.0.1",
    "html": "^1.0.0",
    "less": "^4.1.2",
    "lodash": "^4.17.21",
    "markdown-it": "^12.3.2",
    "markdown-it-highlightjs": "^4.0.1",
    "markdown-it-katex": "^2.0.3",
    "moment": "^2.29.1",
    "node-cmd": "^5.0.0",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-dom-server": "^0.0.5",
    "rollup": "^2.70.1",
    "rollup-plugin-add-shebang": "^0.3.1",
    "rollup-plugin-copy-assets": "^2.0.3",
    "rollup-plugin-import-css": "^3.0.3"
  }
}
